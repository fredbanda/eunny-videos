<div class="flex items-center justify-center min-h-screen bg-gray-100 p-4">
  <div class="w-full max-w-md bg-white shadow-lg rounded-lg p-6">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-6">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      
      <div class="space-y-1">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
      </div>

      <div class="space-y-1">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center space-x-2">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
          <%= f.label :remember_me, class: "text-sm font-medium text-gray-700" %>
        </div>
      <% end %>

      <div class="pt-4">
        <%= f.submit "Log in", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 rounded-lg shadow-md transition" %>
      </div>
    <% end %>

    <div class="mt-4 text-center text-sm text-gray-600">
      <%= render "accounts/shared/links" %>
    </div>
  </div>
</div>
